<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dealer"
            type="cn.icarowner.icarowner.activity.viewmodel.ItemDealerVM" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="@{dealer.jumpToDealerDetail}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dealer_name"
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_item_dealer"
            android:gravity="center"
            android:text="@{dealer.dealerName}"
            android:textColor="@drawable/selector_item_dealer_text"
            android:textSize="14sp" />

    </LinearLayout>
</layout>